<h2>Список товарів</h2>
<div class="products-grid">
    <?php if (empty($products)): ?>
    <p>На даний момент товарів немає.</p>
    <?php else: ?>

    <?php foreach ($products as $product): ?> <div class="product-card">

        <img src="images/<?= e($product['image_name'] ?: 'default'); ?>" alt="<?= e($product['name']); ?>">
        <h3><?= e($product['name']); ?></h3>
        <p class="price"><?= number_format($product['price'], 2); ?> грн</p>
        <p><?= e($product['description']); ?></p>

        <form action="index.php?action=add_to_cart" method="post">
            <input type="hidden" name="product_id" value="<?= $product['id']; ?>">
            <label for="quantity_<?= $product['id']; ?>">Кількість:</label>
            <input type="number" id="quantity_<?= $product['id']; ?>" name="quantity" value="1" min="1" max="99" style="width: 50px;">
            <button type="submit">Купити</button>
        </form>

    </div> <?php endforeach; ?>

    <?php endif; ?>
</div>
